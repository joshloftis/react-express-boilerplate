{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "pretty": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": ["node_modules", "./dist", "webpack", "jest", "./config"]
}
